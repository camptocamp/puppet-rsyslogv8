<%@files.each_index do |i| -%>
<%= 
    scope.function_sub_template_call([
      'rsyslogv8/config/input.erb',
      {
        'input' => {
          'name'     => @files[i],
          'type'     => 'imfile',
          'Tag'      => @rsyslog_tag,
          'Facility' => @facility,
          'Severity' => @severity,
          'readmode' => @readmode,
          'ruleset'  => @ruleset_name,
        }
      }
    ])
%>
<%end -%>
