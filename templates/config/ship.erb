 type="<%= @_omodule %>"
 target="<%= @remote_host %>"
<%- if @remote_port %>
 port="<% @remote_port %>"
<%- end %>
<%- if @_ssl %>
 <%=  @_remote_auth_real_option_name %>=[
<%-     @_remote_authorised_peers.each_index do |i| %>
   "<%= @_remote_authorised_peers[i] %>" <%- if i < @_remote_authorised_peers.length -%> , <%- end %>
<%-   end %>
 ]
<%- end %>
<%- if @_omodule_extra_opts and @_omodule_extra_opts != :undef %>
<%= @_omodule_extra_opts %>
<%  end -%>
<%  if @_ssl -%>
<%    if @_ssl_extra_options and @_ssl_extra_options != :undef %>
<%=     @_ssl_extra_options %>
<%-   end %>
<%- end %>
<% scope.function_template(['rsyslogv8/config/partial/queue.erb']) %>
)
